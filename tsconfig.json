{
  "compilerOptions": {
    "target": "es6",
    "outDir": "js",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "newLine": "LF",
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  }
}